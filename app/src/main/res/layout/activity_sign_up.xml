<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/burger_background1"
    tools:context=".SignUp"

    >

    <ImageView
        android:id="@+id/signUp_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/food_logo"

        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/signUpEmailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:met_baseColor="@android:color/white"
        app:met_singleLineEllipsis="true"
        app:met_textColor="@android:color/white"
        app:met_textColorHint="@android:color/white"
        app:met_underlineColor="@android:color/white"


        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/signUpNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpEmailTxt"
        android:gravity="center"
        android:hint="Username"
        android:inputType="text"
        android:textSize="24sp"
        app:met_baseColor="@android:color/white"
        app:met_textColor="@android:color/white"
        app:met_textColorHint="@android:color/white"
        app:met_underlineColor="@android:color/white"


        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/signUpPassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpNameTxt"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:met_baseColor="@android:color/white"
        app:met_singleLineEllipsis="true"
        app:met_textColor="@android:color/white"
        app:met_textColorHint="@android:color/white"
        app:met_underlineColor="@android:color/white"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:weightSum="1">

        <info.hoang8f.widget.FButton
            android:id="@+id/signUpNowBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/SignUpBtn"
            android:shadowColor="@android:color/black"
            android:text="Sign Up"
            android:textAllCaps="false"


            />


    </LinearLayout>


</RelativeLayout>